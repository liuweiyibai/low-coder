{
    "name": "@low-coder/database",
    "version": "0.0.1",
    "description": "Database schemas and utilities for low-code platform",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./schemas": {
            "import": "./dist/schemas/index.mjs",
            "require": "./dist/schemas/index.js",
            "types": "./dist/schemas/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint src/",
        "type-check": "tsc --noEmit",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:push": "drizzle-kit push"
    },
    "dependencies": {
        "drizzle-orm": "^0.36.4",
        "postgres": "^3.4.5"
    },
    "devDependencies": {
        "@types/node": "^20.10.4",
        "drizzle-kit": "^0.28.1",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3"
    },
    "peerDependencies": {},
    "keywords": [
        "database",
        "drizzle",
        "multi-tenant",
        "saas"
    ],
    "author": "",
    "license": "MIT"
}